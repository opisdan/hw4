
<% if @current_user %>
<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<p>
  <a class="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<div class="row">
<% for post in @posts %>

<div class="col-md-3">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <h5><img src="<%= url_for(post.uploaded_image) %> "class="img-fluid"></h5>
  <p><%= post["description"] %></p>

</div>

<% end %>




<p>
  <a class="btn btn-primary" href="/places">Back to All Places</a>
</p>

<% else %>
Please log in
<% end %>

</div>